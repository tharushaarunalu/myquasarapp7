<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Booking - Sri Lanka Railways</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Header -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Sri Lanka Railways</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/schedule">Train Schedule</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/booking">Booking</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/payment">Payment</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Booking Form -->
  <div class="container mt-4">
    <h1 class="text-center mb-4">Train Booking</h1>
    <form action="/payment" method="POST">
      <!-- Trip Details -->
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Trip Details</h5>
          <div class="mb-3">
            <label for="origin" class="form-label">Origin</label>
            <select class="form-select" id="origin" name="origin" required>
              <option selected disabled value="">Select Origin</option>
              <option value="Colombo">Colombo</option>
              <option value="Kandy">Kandy</option>
              <option value="Galle">Galle</option>
              <!-- Add more options as needed -->
            </select>
          </div>
          <div class="mb-3">
            <label for="destination" class="form-label">Destination</label>
            <select class="form-select" id="destination" name="destination" required>
              <option selected disabled value="">Select Destination</option>
              <option value="Colombo">Colombo</option>
              <option value="Kandy">Kandy</option>
              <option value="Galle">Galle</option>
              <!-- Add more options as needed -->
            </select>
          </div>
          <div class="mb-3">
            <label for="travelDate" class="form-label">Travel Date</label>
            <input type="date" class="form-control" id="travelDate" name="travelDate" required>
          </div>
          <div class="mb-3">
            <label for="class" class="form-label">Class</label>
            <select class="form-select" id="class" name="class" required>
              <option selected disabled value="">Select Class</option>
              <option value="1st Class">1st Class</option>
              <option value="2nd Class">2nd Class</option>
              <option value="3rd Class">3rd Class</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Passenger Information -->
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Passenger Information</h5>
          <div id="passengerList">
            <div class="passenger mb-3">
              <label for="passenger1Name" class="form-label">Passenger Name</label>
              <input type="text" class="form-control" id="passenger1Name" name="passengers[0][name]" placeholder="Full Name" required>
              <label for="passenger1Age" class="form-label mt-2">Passenger Age</label>
              <input type="number" class="form-control" id="passenger1Age" name="passengers[0][age]" placeholder="Age" required>
              <label for="passenger1Type" class="form-label mt-2">Passenger Type</label>
              <select class="form-select" id="passenger1Type" name="passengers[0][type]" required>
                <option selected disabled value="">Select Type</option>
                <option value="Adult">Adult</option>
                <option value="Child">Child</option>
                <option value="Senior Citizen">Senior Citizen</option>
              </select>
            </div>
          </div>
          <button type="button" class="btn btn-secondary" id="addPassenger">Add Passenger</button>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Book Now</button>
      </div>
    </form>
  </div>

  <!-- Footer -->
  <footer class="text-center mt-5 bg-light py-4">
    <p>&copy; 2025 Sri Lanka Railways. All rights reserved.</p>
  </footer>

  <script>
    // Add new passenger fields dynamically
    let passengerIndex = 1;
    document.getElementById('addPassenger').addEventListener('click', function () {
      const passengerList = document.getElementById('passengerList');
      const newPassenger = document.createElement('div');
      newPassenger.classList.add('passenger', 'mb-3');
      newPassenger.innerHTML = `
        <label for="passenger${passengerIndex}Name" class="form-label">Passenger Name</label>
        <input type="text" class="form-control" id="passenger${passengerIndex}Name" name="passengers[${passengerIndex}][name]" placeholder="Full Name" required>
        <label for="passenger${passengerIndex}Age" class="form-label mt-2">Passenger Age</label>
        <input type="number" class="form-control" id="passenger${passengerIndex}Age" name="passengers[${passengerIndex}][age]" placeholder="Age" required>
        <label for="passenger${passengerIndex}Type" class="form-label mt-2">Passenger Type</label>
        <select class="form-select" id="passenger${passengerIndex}Type" name="passengers[${passengerIndex}][type]" required>
          <option selected disabled value="">Select Type</option>
          <option value="Adult">Adult</option>
          <option value="Child">Child</option>
          <option value="Senior Citizen">Senior Citizen</option>
        </select>
      `;
      passengerList.appendChild(newPassenger);
      passengerIndex++;
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
