<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Payment - Sri Lanka Railways</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .progress-bar {
      height: 20px;
      background-color: #007bff;
      border-radius: 10px;
    }
    .progress-container {
      background: #e9ecef;
      border-radius: 10px;
      overflow: hidden;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Sri Lanka Railways</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/schedule">Train Schedule</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/booking">Booking</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/payment">Payment</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Progress Bar -->
  <div class="container mt-4">
    <div class="progress-container">
      <div class="progress-bar" style="width: 66%;"></div>
    </div>
    <p class="text-center mt-2">Step 2 of 3: Payment</p>
  </div>

  <!-- Payment Section -->
  <div class="container mt-4">
    <h1 class="text-center mb-4">Payment</h1>
    
    <!-- Booking Details -->
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">Booking Details</h5>
        <p><strong>Origin:</strong> <span id="origin"></span></p>
        <p><strong>Destination:</strong> <span id="destination"></span></p>
        <p><strong>Travel Date:</strong> <span id="travelDate"></span></p>
        <p><strong>Class:</strong> <span id="class"></span></p>
        <p><strong>Passengers:</strong></p>
        <ul id="passengerList"></ul>
        <p><strong>Total Amount:</strong> LKR <span id="totalAmount"></span></p>
      </div>
    </div>

    <!-- Payment Form -->
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Secure Payment</h5>
        <form action="/payment/process" method="POST">
          <div class="mb-3">
            <label for="cardName" class="form-label">Name on Card</label>
            <input type="text" class="form-control" id="cardName" name="cardName" placeholder="Cardholder's Name" required>
          </div>
          <div class="mb-3">
            <label for="cardNumber" class="form-label">Card Number</label>
            <input type="text" class="form-control" id="cardNumber" name="cardNumber" placeholder="XXXX XXXX XXXX XXXX" required>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label for="expiryDate" class="form-label">Expiry Date</label>
                <input type="text" class="form-control" id="expiryDate" name="expiryDate" placeholder="MM/YY" required>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <label for="cvv" class="form-label">CVV</label>
                <input type="text" class="form-control" id="cvv" name="cvv" placeholder="XXX" required>
              </div>
            </div>
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-success">Proceed to Payment</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="text-center mt-5 bg-light py-4">
    <p>&copy; 2025 Sri Lanka Railways. All rights reserved.</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Example dynamic data
    const booking = {
      origin: "Colombo",
      destination: "Kandy",
      travelDate: "2025-02-15",
      class: "First Class",
      passengers: [
        { name: "John Doe", age: 30, type: "Adult" },
        { name: "Jane Smith", age: 25, type: "Adult" }
      ],
      totalAmount: 1500
    };

    // Populate booking details dynamically
    document.getElementById("origin").textContent = booking.origin;
    document.getElementById("destination").textContent = booking.destination;
    document.getElementById("travelDate").textContent = booking.travelDate;
    document.getElementById("class").textContent = booking.class;
    document.getElementById("totalAmount").textContent = booking.totalAmount;

    const passengerList = document.getElementById("passengerList");
    booking.passengers.forEach(passenger => {
      const li = document.createElement("li");
      li.textContent = `${passenger.name}, Age: ${passenger.age}, Type: ${passenger.type}`;
      passengerList.appendChild(li);
    });
  </script>
</body>
</html>
