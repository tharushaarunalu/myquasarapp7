<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reports</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <h1 class="text-center text-warning mb-4">Reports</h1>
    <div class="row g-4">
      <!-- Revenue Report -->
      <div class="col-lg-4 col-md-6">
        <div class="card border-warning">
          <div class="card-body text-center">
            <h5 class="card-title">Revenue</h5>
            <p class="card-text fs-3 fw-bold">$25,000</p>
            <button class="btn btn-warning btn-sm">View Details</button>
          </div>
        </div>
      </div>
      <!-- Booking Report -->
      <div class="col-lg-4 col-md-6">
        <div class="card border-info">
          <div class="card-body text-center">
            <h5 class="card-title">Total Bookings</h5>
            <p class="card-text fs-3 fw-bold">500</p>
            <button class="btn btn-info btn-sm">View Details</button>
          </div>
        </div>
      </div>
      <!-- User Report -->
      <div class="col-lg-4 col-md-6">
        <div class="card border-success">
          <div class="card-body text-center">
            <h5 class="card-title">New Users</h5>
            <p class="card-text fs-3 fw-bold">150</p>
            <button class="btn btn-success btn-sm">View Details</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Chart Placeholder -->
    <div class="mt-5">
      <h4>Performance Overview</h4>
      <div class="bg-light border rounded p-5 text-center">
        <p class="text-muted">[Chart Placeholder]</p>
        <button class="btn btn-outline-secondary btn-sm">Generate Chart</button>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
